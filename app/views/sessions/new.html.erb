<h2 align="center">Login</h2>



<% if false # comment  %>
<%= render 'shared/errors', obj: @user %>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(:session, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-2' %><br />
        <div class="col-sm-10">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Enter email' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'control-label col-sm-2' %><br />
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password', autocomplete: 'off' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit('Login', class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
