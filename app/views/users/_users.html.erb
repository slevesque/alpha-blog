<table class="table table-hover table-condensed">
  <thead>
    <th>Gravatar</th>
    <th>Username</th>
    <th>Total articles</th>
    <th class="text-right">Email</th>
  </thead>
  <tbody>
    <% obj.each do |user| %>
      <tr>
        <td><%= link_to gravatar_for(user, size: 50), user_path(user) %></td>
        <td><%= link_to user.username, user_path(user) %></td>
        <td class="text-right"><%= user.email%></td>
        <td class="text-right"><%= user.articles.count %></td>
        <% if logged_in? %>
          <td class="text-right">
            <div class="btn-group">
              <%= link_to 'Edit', edit_user_path(user) %>
              <% if logged_in? and current_user.admin? %>
                <%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: 'Are you sure you want to delete the user and all their articles ?'} %>
              <% end %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
    <tbody>
</table>
