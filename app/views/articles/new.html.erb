<h2>New article</h2>

<% if @article.errors.any? %>
  <h2>Errors found when saving article</h3>
  <ul>
  <% @article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>


<%= form_for @article do |f| %>
  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :title %><br />
  <%= f.text_area :description %>
  </p>

  <p>
  <%= f.submit  %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
