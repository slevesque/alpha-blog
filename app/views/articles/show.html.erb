<h2><%= @article.title %></h2>

<div class="well">
  <p><%= simple_format(@article.description) %></p>
</div>

<div class="row">
  <div class="col-xs-12">
    <% if logged_in? && (current_user == @article.user || current_user.admin?)  %>
      <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Are you sure you want to delete this article?'}, class: 'btn btn-lg btn-danger' %>
    <% end %>
    <%= link_to 'Back', articles_path, class: 'btn btn-lg btn-success' %>
  </div>
</div>
