<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class="form-group">
        <%= f.label :title, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: 'control-label col-sm-2' %><br />
        <div class="col-sm-10">
          <%= f.text_area :description, class: 'form-control', placeholder: 'Description of article', rows: 10 %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label 'Categories', class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: 'checkbox-inline input_checkbox') {cb.check_box(class: 'checkbox') + cb.text} %>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
          <%= link_to 'Back', articles_path, class: 'btn btn-default btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

